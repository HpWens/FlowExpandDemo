<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="rv_backgroundColor" format="color"/><!-- 圆角矩形背景色 -->
    <attr name="rv_backgroundPressedColor" format="color"/> <!-- 圆角矩形背景色Pressed -->
    <attr name="rv_backgroundEnabledColor" format="color"/> <!-- 圆角矩形背景色Enabled -->
    <attr name="rv_radius" format="dimension"/><!-- 圆角弧度,单位dp-->
    <attr name="rv_strokeWidth" format="dimension"/> <!-- 圆角线框,单位dp-->
    <attr name="rv_strokeColor" format="color"/><!-- 圆角边框颜色-->
    <attr name="rv_strokePressedColor" format="color"/><!-- 圆角边框颜色Pressed -->
    <attr name="rv_strokeEnabledColor" format="color"/><!-- 圆角边框颜色Enabled -->
    <attr name="rv_textColor" format="color"/><!-- 文字颜色-->
    <attr name="rv_textPressedColor" format="color"/><!-- 文字颜色Pressed-->
    <attr name="rv_textEnabledColor" format="color"/>  <!-- 文字颜色Enabled-->
    <attr name="rv_radiusHalfHeightEnable" format="boolean"/> <!-- 圆角弧度是高度一半-->
    <attr name="rv_widthHeightEqualEnable" format="boolean"/>  <!-- 圆角矩形宽高相等,取较宽高中大值-->
    <attr name="rv_topLeftRadius" format="dimension"/><!-- 圆角弧度,单位dp,TopLeft-->
    <attr name="rv_topRightRadius" format="dimension"/><!-- 圆角弧度,单位dp,TopRight-->
    <attr name="rv_bottomLeftRadius" format="dimension"/>    <!-- 圆角弧度,单位dp,BottomLeft-->
    <attr name="rv_bottomRightRadius" format="dimension"/>    <!-- 圆角弧度,单位dp,BottomRight-->
    <attr name="rv_rippleEnable" format="boolean"/><!-- 是否有Ripple效果,api21+有效-->

    <declare-styleable name="RadiusTextView">
        <attr name="rv_backgroundColor"/>
        <attr name="rv_backgroundPressedColor"/>
        <attr name="rv_backgroundEnabledColor"/>
        <attr name="rv_radius"/>
        <attr name="rv_strokeWidth"/>
        <attr name="rv_strokeColor"/>
        <attr name="rv_strokePressedColor"/>
        <attr name="rv_strokeEnabledColor"/>
        <attr name="rv_textColor"/>
        <attr name="rv_textPressedColor"/>
        <attr name="rv_textEnabledColor"/>
        <attr name="rv_radiusHalfHeightEnable"/>
        <attr name="rv_widthHeightEqualEnable"/>
        <attr name="rv_topLeftRadius"/>
        <attr name="rv_topRightRadius"/>
        <attr name="rv_bottomLeftRadius"/>
        <attr name="rv_bottomRightRadius"/>
        <attr name="rv_rippleEnable"/>
    </declare-styleable>

