<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#4F000000">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/header_img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comp_btn_cancel"/>

            <ImageView
                android:id="@+id/header_img_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/ic_comp_btn_confirm"/>

        </LinearLayout>

        <com.github.baserecycleradapter.PullExpandView
            android:id="@+id/body_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        </com.github.baserecycleradapter.PullExpandView>

        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/footer_img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comp_btn_cancel"/>

            <ImageView
                android:id="@+id/footer_img_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/ic_comp_btn_confirm"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:bufferType="spannable"
        android:text="点击并拖动确认要放的位置"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"/>


</FrameLayout>