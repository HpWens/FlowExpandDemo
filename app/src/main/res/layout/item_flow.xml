<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <com.github.baserecycleradapter.radius.RadiusTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:textColor="#5a5a5a"
        android:textSize="12sp"
        app:rv_backgroundColor="#ffffff"
        app:rv_backgroundEnabledColor="#f1639c"
        app:rv_backgroundPressedColor="#f1639c"
        app:rv_radiusHalfHeightEnable="true"
        app:rv_strokeColor="#dadada"
        app:rv_strokePressedColor="#f1639c"
        app:rv_strokeWidth="1dp"
        app:rv_textEnabledColor="#f1639c"
        app:rv_textPressedColor="#f1639c"/>


</LinearLayout>