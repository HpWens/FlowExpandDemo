<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.baserecycleradapter">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".flow.FlowLayoutActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.HeaderAndFooterActivity">
        </activity>
        <activity android:name=".activity.AnimationActivity">
        </activity>
        <activity android:name=".activity.PullToRefreshActivity">
        </activity>
        <activity android:name=".activity.EmptyActivity">
        </activity>
        <activity android:name=".activity.MultiItemActivity">
        </activity>
        <activity android:name=".activity.NavigationActivity">
        </activity>

        <activity android:name=".activity.FlowActivity"></activity>
        <activity android:name=".activity.TanTanActivity"></activity>
        <activity android:name=".activity.SelectActivity"></activity>

        <activity android:name=".activity.TaoBaoActivity"></activity>

    </application>

</manifest>